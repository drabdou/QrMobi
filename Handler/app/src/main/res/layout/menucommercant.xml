<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"

    tools:context="com.example.abdoudriss.atbpfe.Menucommercant">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_alignParentLeft="true"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:srcCompat="@drawable/atb"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout

            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btpayer"
                android:text="payez-moi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@drawable/designed_button"
                android:textColor="#d4d4d4"
                android:layout_marginBottom="20dp">

            </Button>

            <Button
                android:id="@+id/btHistorique"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@drawable/designed_button"
                android:textColor="#d4d4d4"
                android:text="Historique paiements"></Button>


        </LinearLayout>

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <Button


                android:id="@+id/btRevenu"
                android:text="Mon Revenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@drawable/designed_button"
                android:textColor="#d4d4d4"
                android:layout_marginBottom="20dp"


                >

            </Button>

            <Button
                android:text="Reset password"
                android:id="@+id/btPin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@drawable/designed_button"
                android:textColor="#d4d4d4"

                />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
