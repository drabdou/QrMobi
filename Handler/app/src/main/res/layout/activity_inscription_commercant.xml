<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_inscription_commercant"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abdoudriss.atbpfe.InscriptionCommercant">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/inscrinom"
                    android:hint="Your name"
                    android:maxLength="20"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ellipsize="start"
                    android:gravity="center"
                    android:background="@drawable/designed"
                    android:textColor="#282728"
                    android:singleLine="true" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/inscriemail"
                    android:inputType="textEmailAddress"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ellipsize="start"
                    android:gravity="center"
                    android:background="@drawable/designed"
                    android:textColor="#282728"
                    android:singleLine="true"
                    android:hint="Your email adress"
                    android:maxLength="60" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/inscriusername"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ellipsize="start"
                    android:gravity="center"
                    android:background="@drawable/designed"
                    android:textColor="#282728"
                    android:singleLine="true"
                    android:hint="Username"
                    android:maxLength="20" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText

                    android:id="@+id/inscripassword"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ellipsize="start"
                    android:gravity="center"
                    android:background="@drawable/designed"
                    android:textColor="#282728"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:hint="Password"
                    android:maxLength="20" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/inscrinvpassword"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ellipsize="start"
                    android:gravity="center"
                    android:background="@drawable/designed"
                    android:textColor="#282728"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:hint="Repeat Password"
                    android:maxLength="20" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/inscririb"
                    android:inputType="number"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ellipsize="start"
                    android:gravity="center"
                    android:background="@drawable/designed"
                    android:textColor="#282728"
                    android:singleLine="true"
                    android:hint="Your RIB code"
                    android:maxLength="20"

                    />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/inscritype"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:ellipsize="start"
                    android:gravity="center"
                    android:background="@drawable/designed"
                    android:textColor="#282728"
                    android:singleLine="true"
                    android:hint="Type of work"
                    android:maxLength="20"

                    />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/btlok"
                    android:text="Valider"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:background="@drawable/designed_button"
                    android:textColor="#d4d4d4">

                </Button>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <Button
                    android:id="@+id/btretour"
                    android:text="Retour"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAllCaps="false"
                    android:background="@drawable/designed_button"
                    android:textColor="#d4d4d4"></Button>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</RelativeLayout>
