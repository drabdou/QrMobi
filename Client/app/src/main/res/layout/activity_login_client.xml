<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_client"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:background="#ffffffff"
    tools:context="com.example.abdoudriss.atbpfeclient.LoginClient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/zz"
                android:id="@+id/imageView3" />

            <EditText
                android:id="@+id/edusername"
                android:layout_marginTop="20dp"
                android:maxLength="20"
                android:layout_marginBottom="20dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ellipsize="start"
                android:gravity="center"
                android:background="@drawable/designedtext"
                android:textColor="#282728"
                android:singleLine="true"
                android:hint="Username" />

            <EditText
                android:id="@+id/edpassword"
                android:maxLength="20"
                android:layout_marginBottom="20dp"
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ellipsize="start"
                android:gravity="center"
                android:background="@drawable/designedtext"
                android:textColor="#282728"
                android:singleLine="true"
                android:inputType="textPassword"
                android:hint="Password" />

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <Button
                android:id="@+id/btlogin"
                android:text="Login"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@drawable/designed_button"
                android:textColor="#d4d4d4">

            </Button>

            <android.support.v4.widget.Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <Button
                android:id="@+id/btinscription"
                android:text="inscription"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:background="@drawable/designed_button"
                android:textColor="#d4d4d4">

            </Button>

            <Space
                android:layout_width="20dp"
                android:layout_height="18dp" />

            <TextView
                android:id="@+id/forgotpass"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:clickable="true"
                android:gravity="center"
                android:textSize="15dp"
                android:text="Forgot password ?" />
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
